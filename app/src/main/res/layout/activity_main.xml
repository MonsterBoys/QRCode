<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_clor"
    tools:context="com.xyc.hasee.qrcode.MainActivity">

    <RelativeLayout
        android:id="@+id/actionBar_rl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/actionBarColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="二维码生成"
            android:textColor="@color/actionBarTextColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/careBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/apk_friend_add_up" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/actionBar_rl"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/net_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="网址码" />

        <TextView
            android:id="@+id/project_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="产品码" />

      <!--  <TextView
            android:id="@+id/img_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="图片码" />-->

        <TextView
            android:id="@+id/card_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="名片码" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="电话码" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/row1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="文本码" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="短信码" />

       <!-- <TextView
            android:id="@+id/file_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="文件码" />-->

        <TextView
            android:id="@+id/wifi_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="WIFI码" />
        <TextView
            android:id="@+id/email_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="E-Mail" />
     <!--   <TextView
            android:id="@+id/location_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="位置码" />-->

      <!--  <TextView
            android:id="@+id/active_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@color/actionBarColor"
            android:gravity="center"
            android:text="活码" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/row2"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <include layout="@layout/content_layout"/>

    </LinearLayout>
</RelativeLayout>
